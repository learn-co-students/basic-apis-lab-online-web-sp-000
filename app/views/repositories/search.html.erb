<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @item_info %>
    <ul>
    <% @item_info.each do |item| %>
      <li>
        <%=link_to item[:description], item[:link] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>

