<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @results %>

<ul>
	<% @results.each do |results| %>
	<li><%= results["name"] %><br>
		<%= link_to results["html_url"], results["html_url"] %>
		<br>
		<%= results["description"] %>
	</li>
	<% end %>
</ul>
<% end %>

