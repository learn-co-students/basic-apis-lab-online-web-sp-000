<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @results %>
    <% @results.each do |req| %>
      Name: <%= req["name"] %><br>
      Link: <a href="<%= req["html_url"] %>"><%= req["html_url"] %></a><br>
      Description <%= req["description"] %><br><br>
    <% end %>
  <% end %>
</div>
