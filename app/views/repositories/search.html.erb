<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>


<% if @responses %>
<ul>
  <% @responses.each do |resp| %>
    <li>
      <%= resp['name'] %><br>
      <%= link_to resp["html_url"], resp["html_url"] %><br>
      <%= resp["description"] %>
    </li>
  <% end %>
</ul>
<% end %>