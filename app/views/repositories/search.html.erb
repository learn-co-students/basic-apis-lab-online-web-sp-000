<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @repos  %>
  <ul>
  <% @repos["items"].each do |repo| %>
    <li>
      name: <%= repo["name"] %><br>
      url: <%= link_to "https://github.com/dtrupenn/Tetris", "https://github.com/dtrupenn/Tetris" %><br>
      description: <%= repo["description"] %>
    </li>
  <% end %>
 </ul>
 <% end %>
</div>
